[flake8]
ignore = E501 W504 E731
per-file-ignores =
     iw3/__init__.py: E402
     waifu2x/__init__.py: E402

max_line_length = 128
exclude =
        .env*/
        .venv*/
        env*/
        venv*/
        ENV*/
        tmp/
        data/
        models/
        font_resource/fonts/
        font_resource/font_map.py
        iw3/pretrained_models/
        text_resource/aozora/data/
